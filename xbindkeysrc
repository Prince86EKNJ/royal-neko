# volume control
"amixer set Master 5%-"
	XF86AudioLowerVolume
"amixer set Master 5%-"
	Mod4 + minus

"amixer set Master 5%+"
	XF86AudioRaiseVolume
"amixer set Master 5%+"
	Mod4 + equal

"amixer set Master toggle"
	XF86AudioMute
"amixer set Master toggle"
	Mod4 + m

"kbdlight up"
	XF86KbdBrightnessUp
"kbdlight down"
	XF86KbdBrightnessDown
"kbdlight max"
	Mod4 + XF86KbdBrightnessUp
"kbdlight off"
	Mod4 + XF86KbdBrightnessDown

"gmux_backlight +25"
	XF86MonBrightnessUp
"gmux_backlight -25"
	XF86MonBrightnessDown
"gmux_backlight 1023"
	Mod4 + XF86MonBrightnessUp
"gmux_backlight 0"
	Mod4 + XF86MonBrightnessDown

# lock
"lock"
	Mod4 + l